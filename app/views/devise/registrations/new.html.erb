<h2 class="text-center text-3xl font-bold py-5">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col justify-center items-center" }) do |f| %>
  

  <div class="flex flex-col justify-center items-center gap-3">
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Username", class: "rounded-[1rem] h-[3rem]" %>
    </div>
     <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "rounded-[1rem] h-[3rem]" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class: "rounded-[1rem] h-[3rem]" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation", class: "rounded-[1rem] h-[3rem]" %>
    </div>

    <div class="actions bg-blue-500 flex items-center pb-2">
      <%= f.submit "Sign up", class: "hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors duration-300 flex items-center justify-center text-center" %>
    </div>
      
    <br />
    <%= link_to "Log in", new_session_path(resource_name) %>
    <br />
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>
