<h2 class="text-center text-3xl font-bold py-5">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col justify-center items-center" }) do |f| %>
  <div class="flex flex-col justify-center items-center gap-3">

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Username", class: "rounded-[1rem] h-[3rem] w-[95vw] sm:w-[80vw] md:w-[50vw]" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class: "rounded-[1rem] h-[3rem] w-[95vw] sm:w-[80vw] md:w-[50vw]" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
<div class="actions bg-blue-500 flex items-center pb-2">
  <%= f.submit "Log in", class: "hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors duration-300 flex items-center justify-center text-center w-[95vw] sm:w-[80vw] md:w-[50vw]" %>
</div>


  </div>
  <br />
  <%= link_to "Sign up", new_registration_path(resource_name) %>
  <br />
<% end %>
